# .env.example - EJEMPLO DE VARIABLES DE ENTORNO

# Este archivo es un EJEMPLO. Para usar, cópialo como .env y modifica los valores.
# NUNCA comitas el archivo .env real con credenciales reales

# ================================================
# CONFIGURACIÓN DJANGO
# ================================================

# Clave secreta (Cambiar en producción)
SECRET_KEY=django-insecure-ecofort-market-talcahuano-2025

# Modo debug (False en producción)
DEBUG=True

# Hosts permitidos
ALLOWED_HOSTS=localhost,127.0.0.1,*.example.com

# ================================================
# CONFIGURACIÓN BASE DE DATOS
# ================================================

# Motor de base de datos
DB_ENGINE=django.db.backends.mysql

# Nombre de la base de datos
DB_NAME=ecofort_market

# Usuario de la base de datos
DB_USER=ecofort

# Contraseña (Cambiar en producción)
DB_PASSWORD=ecofort2025

# Host de la base de datos
DB_HOST=localhost

# Puerto de MySQL
DB_PORT=3306

# ================================================
# CONFIGURACIÓN CORS
# ================================================

# Orígenes permitidos para CORS
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:8000

# ================================================
# CONFIGURACIÓN SEGURIDAD
# ================================================

# Sesiones seguras (True en producción)
SESSION_COOKIE_SECURE=False

# CSRF en cookies (True en producción)
CSRF_COOKIE_SECURE=False

# HTTPS redirect (True en producción)
SECURE_SSL_REDIRECT=False

# ================================================
# CORREO ELECTRÓNICO (Opcional)
# ================================================

# Backend de email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Host SMTP
EMAIL_HOST=smtp.gmail.com

# Puerto SMTP
EMAIL_PORT=587

# Usuario email
EMAIL_HOST_USER=tu-email@gmail.com

# Contraseña
EMAIL_HOST_PASSWORD=tu-contraseña-app

# Usar TLS
EMAIL_USE_TLS=True

# ================================================
# CONFIGURACIÓN ARCHIVOS
# ================================================

# URL de media (archivos subidos)
MEDIA_URL=/media/

# Ruta de media en el servidor
MEDIA_ROOT=./media

# ================================================
# LOGGING (Opcional)
# ================================================

# Nivel de logging
LOG_LEVEL=INFO

# Archivo de logs
LOG_FILE=logs/django.log

# ================================================
# NOTAS IMPORTANTES
# ================================================

# 1. Copia este archivo como ".env" en el mismo directorio
# 2. Edita los valores según tu configuración local
# 3. NUNCA comitas el archivo .env real
# 4. En producción, usa valores seguros y generados aleatoriamente
# 5. Utiliza un servicio de gestión de secretos en producción
